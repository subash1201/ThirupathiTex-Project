<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Thirupathi Tex</title>
    <link rel="stylesheet" href="css/styles.css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/styles.css">
    <style media="screen">
      .card-order{
        background: rgba( 255, 255, 255, 0.25 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 5.0px );
        -webkit-backdrop-filter: blur( 5.0px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );

      }
      input.phonenumber::-webkit-outer-spin-button,
      input.phonenumber::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <form  action="/prod" method="POST">

      <div class="navigation-bar">
        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-dark" >
            <a class="navbar-brand" href="" style="padding:5px 20px ;color:white;">Thirupathi Tex</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
         </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <a class="nav-link" href="#shirts" style="padding:5px 20px;color:white;">Shirts</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#tshirts" style="  padding:5px 20px;color:white;" >T-Shirts</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#pants" style="  padding:5px 20px;color:white;">Pants</a>
                </li>

              </ul>
            </div>

      </div>


      <section id="shirts" style="padding:50px 120px;">

            <div class="row">

                <% items.shirts.forEach(function(item){ %>
                  <div class="col-shirts col-lg-4 col-md-6 col-sm-12">
                <div class="card  card-img" style="width:18rem; margin-right:50px; margin-bottom:25px;" data-item-id="<%= item.id %>">
                  <img src="img/<%= item.imgName %>" class="card-img-top" alt="..." height="300">
                  <div class="card-body">
                    <table>
                      <tr>
                        <td>  <h5 class="card-title"><%= item.name %></h5>
                          <p class="card-text">₹<%= item.price %></p></td>
                          <td><a href="#order" value="<%=item.dcode %>" class="btn btn-primary shop-item-button">BUY</a></td>
                      </tr>
                    </table>
                  </div>
                </div>
                </div>
                <% }) %>


            </div>

      </section>

      <section id="tshirts" style="padding:50px 120px;">

            <div class="row">

                <% items.tshirts.forEach(function(item){ %>
                  <div class="col-shirts col-lg-4 col-md-6 col-sm-12">
                <div class="card  card-img" style="width:18rem; margin-right:50px; margin-bottom:25px;" data-item-id="<%= item.id %>"  >
                  <img src="img/<%= item.imgName %>" class="card-img-top" alt="..." height="300">
                  <div class="card-body">
                    <table>
                      <tr>
                        <td>  <h5 class="card-title"><%= item.name %></h5>
                          <p class="card-text">₹<%= item.price %></p></td>
                          <td><a href="#order"  class="btn btn-primary shop-item-button">BUY</a></td>
                      </tr>
                    </table>
                  </div>
                </div>
                </div>
                <% }) %>


            </div>

      </section>

      <section id="pants" style="padding:50px 120px;">

            <div class="row">

                <% items.pants.forEach(function(item){ %>
                  <div class="col-shirts col-lg-4 col-md-6 col-sm-12">
                <div class="card  card-img" style="width:18rem; margin-right:50px; margin-bottom:25px;" value="<%= item.id %>">
                  <img src="img/<%= item.imgName %>" class="card-img-top" alt="..." height="300">
                  <div class="card-body">
                    <table>
                      <tr>
                        <td>  <h5 class="card-title"><%= item.name %></h5>
                          <p class="card-text">₹<%= item.price %></p></td>
                          <td><a href="#order" class="btn btn-primary">BUY</a></td>
                      </tr>
                    </table>
                  </div>
                </div>
                </div>
                <% }) %>


            </div>

      <section id="order">
        <center>
          <h1>Place your order</h1>
          <div class="card card-order" style="width:30rem;">
            <div class="card-body">
              <div class="input-group mb-3">
                <label for="Size" style="margin-right:80px;">Size</label>
                <select name="size" class="form-select" id="inputGroupSelect01">
                  <!-- <option selected>S</option> -->
                  <option value="small">S</option>
                  <option value="medium">M</option>
                  <option value="large">L</option>
                  <option value="extralarge">XL</option>
                </select>
              </div>
              <div class="input-group mb-3">
                <label for="quantity" style="margin-right:50px;">Quantity</label>
                <input type="number" name="quantity" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              </div>
              <div class="input-group mb-3">
                <label for="Name" style="margin-right:70px;">Name</label>
                <input type="text" name="name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              </div>
              <div class="form-floating">
                <textarea class="form-control" name="address" placeholder="" id="floatingTextarea2" style="height: 100px"></textarea>
                <label for="floatingTextarea2">Address</label>
              </div><br><br>
              <div class="input-group mb-3">
                <label for="Name" style="margin-right:50px;">Landmark</label>
                <input type="text" name="landmark" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
              </div>
              <div class="input-group mb-3">
                <label for="phnumber" style="margin-right:25px;">Phone Number</label>
                <input type="number" name="phoneno" class="form-control phonenumber" >
              </div>
            
              <button type="submit" href="/final" class="btn btn-primary" style="margin-right:100px;">Place Order</button>
            </div>
          </div>
        </center>

      </section>


    </form>
  </body>
</html>
